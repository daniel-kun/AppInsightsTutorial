<Window x:Class="AppInsightsTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppInsightsTutorial"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="button1" Content="Button 1" Click="button1_Click"/>
        <Button Grid.Row="1" Name="button2" Content="Button 2" Click="button2_Click"/>
        <Button Grid.Row="2" Name="buttonCrash" Content="Crash !" Click="buttonCrash_Click"/>
    </Grid>
</Window>
